{
    "manifest_version": 3,
    "name": "Clasher",
    "version": "1.0",
    "description": "A tool for managing network routing rules",
    "permissions": [
      "storage",
      "webRequest",
      "downloads",
      "tabs",
      "activeTab"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    }
  }